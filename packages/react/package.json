{
  "name": "@webview-bridge/react",
  "type": "module",
  "version": "1.7.8",
  "description": "Fully Type-Safe Integration for React Native WebView and Web",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gronxb/webview-bridge.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "package.json"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup --config ./tsup.config.ts",
    "test:type": "tsc --noEmit",
    "lint": "biome check"
  },
  "devDependencies": {
    "@types/react": "^18.2.69",
    "@types/use-sync-external-store": "^1.5.0",
    "@webview-bridge/web": "workspace:*",
    "react": "^18.3.1"
  },
  "dependencies": {
    "@webview-bridge/types": "workspace:*",
    "use-sync-external-store": "1.6.0"
  },
  "peerDependencies": {
    "@webview-bridge/web": "*",
    "react": ">=16.8"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
